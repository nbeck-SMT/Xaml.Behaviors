<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reactive="clr-namespace:Avalonia.Xaml.Interactions.ReactiveUI"
        xmlns:core="clr-namespace:Avalonia.Xaml.Interactions.Core"
        x:Class="Avalonia.Xaml.Interactions.UnitTests.Core.InteractionTriggerBehavior001"
        Title="InteractionTriggerBehavior001">
  <Interaction.Behaviors>
    <reactive:InteractionTriggerBehavior Interaction="{Binding TestInteraction}">
      <core:ChangePropertyAction TargetObject="TargetTextBox"
                                 PropertyName="Text"
                                 Value="Triggered" />
    </reactive:InteractionTriggerBehavior>
  </Interaction.Behaviors>
  <StackPanel>
    <TextBox Name="TargetTextBox" Text="Initial Text" />
    <Button Name="TargetButton" Content="Button" Click="OnButtonClick" />
  </StackPanel>
</Window>
